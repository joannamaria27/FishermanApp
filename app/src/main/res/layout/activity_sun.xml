<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="379dp"
        app:srcCompat="@drawable/ic_sun1_foreground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFEB3B"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wsch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/big_padding"
            android:layout_weight="1"
            android:text="Wschód słońca dziś: "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/wschod_dzis"
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/big_padding"
            android:inputType="date" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_weight="1"
        android:background="#FFC107"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/zachod_dzis"
            android:layout_width="207dp"
            android:layout_height="wrap_content"

            android:layout_margin="@dimen/big_padding"
            android:text="Zachód słońca dziś: "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/a"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/big_padding" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF9800"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wschod_jutro"
            android:layout_width="98dp"

            android:layout_height="wrap_content"
            android:layout_margin="@dimen/big_padding"
            android:layout_weight="1"
            android:text="Wschód słońca jutro: " />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/big_padding" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="421dp"
        android:layout_height="143dp"
        android:layout_weight="1"
        android:background="#FF5722"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="207dp"

            android:layout_height="wrap_content"
            android:layout_margin="@dimen/big_padding"
            android:text="Zachód słońca jutro: " />

        <TextView
            android:id="@+id/zachod_jutro"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/big_padding" />
    </LinearLayout>

</LinearLayout>